<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorToolbarFilkomNew"
    android:id="@+id/content"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_app"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:text="FILKOM APPS"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30sp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="30sp">
            <View
                android:layout_width="55sp"
                android:layout_height="1sp"
                android:alpha="0.5"
                android:background="@color/colorrGreyFilkom"
                android:layout_marginTop="30sp">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorOrangeFilkomNewApp"
                />
            <View
                android:layout_width="55sp"
                android:layout_height="1sp"
                android:background="@color/colorrGreyFilkom"
                android:layout_marginTop="10sp"
                android:alpha="0.5"
                android:layout_marginBottom="25sp">
            </View>
            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5sp"
                android:hint="Username"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:maxLines="1"
                android:inputType="text"
                android:nextFocusDown="@id/edt_password"
                android:theme="@style/ColorEditTextLogin"
                android:textColorHint="@color/colorrGreyFilkom"
                android:drawableLeft="@drawable/ic_person_login"
                android:layout_marginTop="10sp"/>
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:theme="@style/ColorEditTextLogin"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="@color/colorrGreyFilkom"
                android:drawableLeft="@drawable/ic_lock_login"
                android:drawablePadding="5sp"
                android:layout_marginTop="10sp"/>
            <Button
                android:id="@+id/btn_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@drawable/bg_btn_sign_in"
                android:textColor="@color/colorWhite"
                android:text="Sign IN"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>