<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="2dp"
    android:layout_marginBottom="5dp"
    card_view:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:layout_width="4dp"
                    android:layout_height="52dp"
                    android:background="@color/colorDarkTangerine">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_komponen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Komponen"
                        android:layout_weight="1"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/colorQuarts"/>
                    <TextView
                        android:id="@+id/txt_indikator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:text="Indikator"
                        android:textColor="@color/colorBlackFilkom" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/ln_nilai1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nilai1"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/black_de"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <skripsi.edwin.filkomapps.util.ExpandableTextView
                            android:id="@+id/txt_nama1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_de"
                            android:gravity="center"
                            android:text="Nama"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/ln_nilai2"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nilai2"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/black_de"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <skripsi.edwin.filkomapps.util.ExpandableTextView
                            android:id="@+id/txt_nama2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_de"
                            android:gravity="center"
                            android:text="Nama "/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/ln_nilai3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nilai3"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/black_de"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <skripsi.edwin.filkomapps.util.ExpandableTextView
                            android:id="@+id/txt_nama3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_de"
                            android:gravity="center"
                            android:text="Nama "/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="center"
                        android:id="@+id/ln_nilai4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nilai4"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/black_de"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <skripsi.edwin.filkomapps.util.ExpandableTextView
                            android:id="@+id/txt_nama4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_de"
                            android:maxLines="1"
                            android:gravity="center"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>