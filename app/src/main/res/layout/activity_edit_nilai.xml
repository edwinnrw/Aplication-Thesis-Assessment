<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".summaryPenilaian.view.EditNilaiUjianActivity">
    <include layout="@layout/toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_indikator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="21dp"
                android:textStyle="bold"
                android:textColor="@color/black_de"
                android:text="@string/kriteria1.1"/>
            <RadioGroup
                android:id="@+id/rgPenilaian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbNilai1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="1"/>
                <RadioButton
                    android:id="@+id/rbNilai2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="2"/>
                <RadioButton
                    android:id="@+id/rbNilai3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="3"/>
                <RadioButton
                    android:id="@+id/rbNilai4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="4"/>
                <RadioButton
                    android:id="@+id/rbNilai5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="5"/>
                <RadioButton
                    android:id="@+id/rbNilai6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="6"/>
                <RadioButton
                    android:id="@+id/rbNilai7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                    android:text="7"/>
            </RadioGroup>

            <TextView
                android:id="@+id/txt_nilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_de"
                android:layout_marginTop="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_de"
                android:textSize="15dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrangeFilkomNewApp"
        android:textColor="@color/colorWhite"
        android:text="UPDATE NILAI"/>
</LinearLayout>