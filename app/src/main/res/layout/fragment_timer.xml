<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorOrangeFilkomNewApp"

        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketentuan Waktu"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:drawablePadding="10dp"
            android:textColor="@color/colorWhite"
            />
        <LinearLayout
            android:id="@+id/lnTutup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presentasi"
                    android:textSize="17dp"
                    android:textColor="@color/black_de"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="10 Menit"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/countDownPresentasi"
                        android:visibility="visible"
                        android:gravity="center"
                        app:isShowDay="false"
                        app:isShowHour="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:suffixMinute="m"
                        app:suffixSecond="s"
                        app:timeTextSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/pause_presentasi"
                            android:layout_width="25dp"
                            android:visibility="gone"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pause"/>
                        <ImageView

                            android:id="@+id/play_presentasi"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_play"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/stop_presentasi"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_stop"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAshGrey"
            android:alpha="0.3"
            >

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanya Jawab"
                    android:textSize="17dp"
                    android:textColor="@color/black_de"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="15 Menit"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/countDownTanyaJawab"
                        android:visibility="visible"
                        android:gravity="center"
                        app:isShowDay="false"
                        app:isShowHour="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:suffixMinute="m"
                        app:suffixSecond="s"
                        app:timeTextSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/pause_tanya_jawab"
                            android:layout_width="25dp"
                            android:visibility="gone"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pause"/>
                        <ImageView
                            android:id="@+id/play_tanya_jawab"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_play"/>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/stop_tanya_jawab"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_stop"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>