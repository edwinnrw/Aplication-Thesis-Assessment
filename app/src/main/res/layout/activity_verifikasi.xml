<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_verifikasi">
    <include layout="@layout/toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrangeFilkom"
                android:text="Mahasiswa"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_mahasiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edwin Nurwansyah"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlackFilkom"
                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_g_mahasiswa"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radio_hadir_mahasiswa"
                        android:layout_width="wrap_content"
                        android:text="Hadir"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/radio_tdkhadir_mahasiswa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGrey">

            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrangeFilkom"
                android:text="Pembimbing"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_pembimbing1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembimbimbing 1"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlackFilkom"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_g_pembimbing1"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radio_hadir_pembimbing1"
                        android:layout_width="wrap_content"
                        android:text="Hadir"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/radio_tdkhadir_pembimbing1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_pembimbing2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_pembimbing2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembimbimbing 2"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlackFilkom"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_g_pembimbing2"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radio_hadir_pembimbing2"
                        android:layout_width="wrap_content"
                        android:text="Hadir"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/radio_tdkhadir_pembimbing2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGrey">

            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrangeFilkom"
                android:text="Penguji"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_penguji1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penguji 1"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlackFilkom"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_g_penguji1"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radio_hadir_penguji1"
                        android:layout_width="wrap_content"
                        android:text="Hadir"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/radio_tdkhadir_penguji1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_penguji2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penguji 2"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlackFilkom"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_g_penguji2"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radio_hadir_penguji2"
                        android:layout_width="wrap_content"
                        android:text="Hadir"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/radio_tdkhadir_penguji2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ln_dosen_pengganti">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGrey">

                </View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorOrangeFilkom"
                    android:text="Rekomendasi Penguji Pengganti"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlackFilkom"
                        android:text="Memiliki Rekomendasi Dosen Pengganti ?"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/radio_g_penguji3"
                        android:layout_weight="1">
                        <RadioButton
                            android:id="@+id/radio_hadir_penguji3"
                            android:layout_width="wrap_content"
                            android:text="Ya"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:id="@+id/radio_tdkhadir_penguji3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tidak"
                            android:layout_weight="1"/>
                    </RadioGroup>
                </LinearLayout>
                <EditText
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:visibility="gone"
                    android:id="@+id/edt_search_dosen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_search_dosen"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_user_dosen"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColorHint="#aaaaaa"
                    android:background="@drawable/bg_search_dosen_pengganti"
                    android:hint="Search Lecture"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_verifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrangeFilkomNewApp"
        android:textColor="@color/colorWhite"
        android:text="SUBMIT"/>
</LinearLayout>